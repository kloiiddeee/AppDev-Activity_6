<%- include('partials/header') %>

<h2>Your Orders</h2>

<% if (orders.length === 0) { %>
  <p>You have no orders.</p>
<% } else { %>
  <ul>
    <% orders.forEach(order => { %>
      <li>
        Order #<%= order.id %> - $<%= order.total %> - <%= order.created_at.toDateString() %>
        <a href="/orders/<%= order.id %>">View Details</a>
      </li>
    <% }) %>
  </ul>
<% } %>

<%- include('partials/footer') %>
