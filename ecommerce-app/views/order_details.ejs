<%- include('partials/header') %>

<h2>Order #<%= order.id %> Details</h2>
<p>Total: $<%= order.total %></p>
<p>Date: <%= order.created_at.toDateString() %></p>

<h3>Items:</h3>
<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% items.forEach(item => { %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.quantity %></td>
        <td>$<%= item.price %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('partials/footer') %>
